//IO definitions 
#define KEY_A  14
#define KEY_B  15
#define KEY_C  16

//Libraries
#include <debounce.h>

//IO setup
void keys_IoSetup() {
  //Setup IO
  pinMode(KEY_A, INPUT_PULLUP);
  pinMode(KEY_B, INPUT_PULLUP);
  pinMode(KEY_C, INPUT_PULLUP);
}